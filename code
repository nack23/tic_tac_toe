<body>

  <h1>Tic Tac Toe</h1>
  <div id="message" class="turn">üîÑ Player ‚ùå's Turn</div>

  <div class="board" id="board"></div>

  <button class="reset-btn" onclick="resetGame()">üîÅ Reset Game</button>

  <!-- üìñ How to Play Link -->
  <div id="rules-link" onclick="showRules()">üìñ How to Play?</div>

  <!-- üìñ Rules Modal -->
  <div class="modal" id="rules-modal">
    <div class="modal-content">
      <span class="close-btn" onclick="closeRules()">‚úñ</span>
      <h2>How to Play</h2>
      <p>This is the classic Tic Tac Toe game.</p>
      <p>‚ùå and ‚≠ï take turns placing their symbol.</p>
      <p>üéØ Goal: Get 3 of your symbols in a row (horizontal, vertical, or diagonal).</p>
      <p>Example:</p>
      <pre>
‚ùå | ‚ùå | ‚ùå
‚≠ï | ‚≠ï |  
   |    |  
      </pre>
      <p>If all cells are filled and no one wins, it's a ü§ù draw!</p>
    </div>
  </div>

  <script>
    const boardEl = document.getElementById('board');
    const messageEl = document.getElementById('message');

    let board = Array(9).fill('');
    let currentPlayer = '‚ùå';
    let gameOver = false;

    const winPatterns = [
      [0,1,2],[3,4,5],[6,7,8],
      [0,3,6],[1,4,7],[2,5,8],
      [0,4,8],[2,4,6]
    ];

    function drawBoard() {
      boardEl.innerHTML = '';
      board.forEach((cell, i) => {
        const cellEl = document.createElement('div');
        cellEl.className = 'cell';
        if (cell !== '' || gameOver) cellEl.classList.add('disabled');
        cellEl.textContent = cell;
        cellEl.addEventListener('click', () => handleMove(i));
        boardEl.appendChild(cellEl);
      });
    }

    function handleMove(i) {
      if (board[i] !== '' || gameOver) return;

      board[i] = currentPlayer;
      drawBoard();
      const winner = checkWinner();

      if (winner) {
        showResult(winner);
        highlightWinner(winner.line);
        gameOver = true;
      } else if (!board.includes('')) {
        showResult({ player: 'Draw' });
        gameOver = true;
      } else {
        currentPlayer = currentPlayer === '‚ùå' ? '‚≠ï' : '‚ùå';
        messageEl.className = 'turn';
        messageEl.textContent = `üîÑ Player ${currentPlayer}'s Turn`;
      }
    }

    function checkWinner() {
      for (const line of winPatterns) {
        const [a, b, c] = line;
        if (board[a] && board[a] === board[b] && board[a] === board[c]) {
          return { player: board[a], line };
        }
      }
      return null;
    }

    function highlightWinner(line) {
      const cells = document.querySelectorAll('.cell');
      line.forEach(i => {
        cells[i].classList.add('winning-cell');
      });
    }

    function showResult(result) {
      if (result.player === 'Draw') {
        messageEl.className = 'popup draw';
        messageEl.textContent = 'ü§ù It\'s a Draw!';
      } else {
        messageEl.className = 'popup win';
        messageEl.textContent = `üèÜ Player ${result.player} Wins!`;
      }
    }

    function resetGame() {
      board = Array(9).fill('');
      currentPlayer = '‚ùå';
      gameOver = false;
      messageEl.className = 'turn';
      messageEl.textContent = `üîÑ Player ${currentPlayer}'s Turn`;
      drawBoard();
    }

    function showRules() {
      document.getElementById('rules-modal').style.display = 'flex';
    }

    function closeRules() {
      document.getElementById('rules-modal').style.display = 'none';
    }

    // Initialize board on load
    drawBoard();
  </script>

</body>
</html>
